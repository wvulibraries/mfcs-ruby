<!-- Alerts -->
<%= render "components/alerts/alerts" %>

<section aria-labelledby="log-in-1-label" class="bg-light py-5 wvu-bg-position-bottom wvu-bg-topo-light wvu-bg-blend-mode-luminosity--80 vw-100 vh-100">
  <div class="container wvu-z-index-content h-100 login-page text-center">
    <%= image_pack_tag 'media/packs/images/mfcs_logo.svg', class:'mfcs-logo', alt: 'MFCS Logo' %>
    <div class="row">
      <div class="col-md-6 mx-auto my-auto">
          <div class="login-box shadow">
            <%= form_for(resource, {as: resource_name, url: session_path(resource_name), class: 'mt-0' }) do |f| %>
              <h1 class="h3 mt-3 p-3 font-weight-normal"> Please Sign In </h1>

              <div class="field">
                <%= f.label :email, class:'sr-only' %>
                <%= f.email_field :email, autofocus: true, class:"p-2 col-6", autocomplete: "email", placeholder: "Email" %>
              </div>

              <div class="field">
                <%= f.label :password, class:'sr-only' %>
                <%= f.password_field :password, autocomplete: "current-password", class:"p-2 col-6", placeholder: 'Password' %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="field checkbox mb-3">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>
              <!-- Submit -->
              <%= f.submit "Log in", class: 'btn btn-primary col-md-3' %>
              <!-- Omni Auth -->
              <%- if devise_mapping.omniauthable? %>
                <%- resource_class.omniauth_providers.each do |provider| %>
                  <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'btn btn-secondary col-md-3' %><br />
                <% end %>
              <% end %>
            <% end %>
       
          <p class="mt-3 p-3">
            <small>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name) %>
            <% end %>
            </small>
          </p>
          </div>
      </div>
    </div>
  </div>
</section>