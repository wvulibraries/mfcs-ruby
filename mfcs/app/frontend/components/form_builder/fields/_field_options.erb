<fieldset class="commonFieldSettings">
  <legend> Options </legend>
  <div class="field checkbox-wrapper">
    <div class="row">
      <div class="checkbox col-6">
        <%= check_box_tag :required %>
        <%= label_tag :required %>
        <span class="far fa-question-circle field-help" data-toggle="popover" data-trigger="click hover" data-content="Field is required to be filled out."></span>
      </div>
      <div class="checkbox col-6">
        <%= check_box_tag :no_duplicates %>
        <%= label_tag :no_duplicates %>
        <span class="far fa-question-circle field-help" data-toggle="popover" data-trigger="click hover" data-content="Duplicate entries for this form are not allowed."></span>
      </div>
      <div class="checkbox col-6">
        <%= check_box_tag :read_only %>
        <%= label_tag :read_only %>
        <span class="far fa-question-circle field-help" data-toggle="popover" data-trigger="click hover" data-content="Field is read-only, data is pulled from form definition on insert, previous revision on update, not from POST."></span>
      </div>
      <div class="checkbox col-6">
        <%= check_box_tag :disabled %>
        <%= label_tag :disabled %>
        <span class="far fa-question-circle field-help" data-toggle="popover" data-trigger="click hover" data-content="Field is disabled and not submitted to POST."></span>
      </div>
      <div class="checkbox col-6">
        <%= check_box_tag :disabled_on_insert %>
        <%= label_tag :disabled_on_insert %>
        <span class="far fa-question-circle field-help" data-toggle="popover" data-trigger="click hover" data-content="Field is disabled and not submitted to POST, but can be changed on an update."></span>
      </div>
      <div class="checkbox col-6">
        <%= check_box_tag :disabled_on_update %>
        <%= label_tag :disabled_on_update %>
        <span class="far fa-question-circle field-help" data-toggle="popover" data-trigger="click hover" data-content="Field is disabled and not submitted to PATCH / POST. "></span>
      </div>
      <div class="checkbox col-6">
        <%= check_box_tag :public_release %>
        <%= label_tag :public_release %>
        <span class="far fa-question-circle field-help" data-toggle="popover" data-trigger="click hover" data-content="Dependant on Export Script: Metadata check to determine if field should be exported to XML."></span>
      </div>
      <div class="checkbox col-6">
        <%= check_box_tag :oai_release %>
        <%= label_tag :oai_release %>
        <span class="far fa-question-circle field-help" data-toggle="popover" data-trigger="click hover" data-content="OAI Application will cache this field."></span>
      </div>
      <div class="checkbox col-6">
        <%= check_box_tag :sortable %>
        <%= label_tag :sortable %>
        <span class="far fa-question-circle field-help" data-toggle="popover" data-trigger="click hover" data-content="Field is Sortable in list table in MFCS."></span>
      </div>
      <div class="checkbox col-6">
        <%= check_box_tag :searchable %>
        <%= label_tag :searchable %>
        <span class="far fa-question-circle field-help" data-toggle="popover" data-trigger="click hover" data-content="Field is Searchable in list table in MFCS."></span>
      </div>
      <div class="checkbox col-6">
        <%= check_box_tag :display_in_list %>
        <%= label_tag :display_in_list %>
        <span class="far fa-question-circle field-help" data-toggle="popover" data-trigger="click hover" data-content="Field is displayed in the listing table in MFCS."></span>
      </div>
      <div class="checkbox col-6">
        <%= check_box_tag :hidden %>
        <%= label_tag :hidden %>
        <span class="far fa-question-circle field-help" data-toggle="popover" data-trigger="click hover" data-content="Input type is set to Hidden."></span>
      </div>
    </div>
  </div>
</fieldset>