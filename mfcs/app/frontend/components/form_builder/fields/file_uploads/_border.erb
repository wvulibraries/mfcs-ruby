<fieldset class="fileFieldSettings d-none" data-target="conversions.border" data-controller="border">
  <legend> Border Options </legend>

  <div class="row no-gutters input-group">
    <div class="field col">
      <%= label_tag :border_width %>  
      <span class="far fa-question-circle field-help" data-toggle="popover" data-trigger="click hover" data-content="Border Size"></span>
      <%= number_field_tag :border_width %>
    </div>


    <div class="field col">
      <%= label_tag :border_color %> 
      <%= color_field_tag( :border_color, "#ff0000", { "data-target" => "border.bordercolor", "data-action" => "change->border#setValue" } ) %>
    </div>
  </div>
</fieldset>