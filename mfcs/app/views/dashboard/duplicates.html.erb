<h2 class="mb-2"> Duplicate Files </h2>

<% unless @medias.present? %>
  No duplicate files found.
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead>
        <tr class="d-flex">
          <th class="col-1"> Creation Date </th>
          <th class="col-1"> Updated Date </th>
          <th class="col-1"> Media ID </th>
          <th class="col-1"> Form ID</th>
          <th class="col-1"> Checksum </th>
          <th class="col-1"> Filename </th>  
        </tr>
      </thead>

      <tbody>
        <% @medias.each do |media| %>
          <tr class="d-flex">
            <th class="col-1"> <%= media.created_at %> </th>
            <th class="col-1"> <%= media.updated_at %> </th>
            <th class="col-1"> <%= media.id %> </th>
            <th class="col-1"> <%= media.form_id %> </th>
            <th class="col-1"> <%= media.checksum %> </th>
            <th class="col-1"> <%= media.filename %> </th>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>