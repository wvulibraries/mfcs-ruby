<h1>Projects</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th> Project Name </th>
      <th> Project ID (Short Name) </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td> <%= project.name %> </td>
        <td> <%= project.project_id %> </td>
        <td> <%= link_to 'Show', [:admin, project] %> </td>
        <td> <%= link_to 'Edit', edit_admin_project_path(project) %> </td>
        <td> <%= link_to 'Destroy', [:admin, project], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_admin_project_path %>
