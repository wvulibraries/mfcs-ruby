<div class="row"> 

  <div class="col"> 
    <h2> User Info </h2>

    <div class="strong"> 
      <strong> Username : </strong>  <%= @user.username %> 
    </div> 

    <div class="strong"> 
      <strong> First Name : </strong>  <%= @user.first_name %> 
    </div> 

    <div class="strong"> 
      <strong> Last Name : </strong>  <%= @user.last_name %>  
    </div>

    <div class="strong"> 
      <strong> Email : </strong>  <%= @user.email %>  
    </div>

    <div class="strong"> 
      <strong> Student : </strong>  <%= @user.student ? "Yes" : "No" %>  
    </div>    

    <div class="strong"> 
      <strong> Active : </strong>  <%= @user.active ? "Yes" : "No" %>  
    </div> 

    <div class="strong"> 
      <strong> Status : </strong>  <%= @user.status %>  
    </div> 

    <div class="strong"> 
      <strong> Form Creator : </strong>  <%= @user.form_creator ? "Yes" : "No" %>  
    </div> 
  </div>
  
</div>

<%= link_to 'Back', admin_users_path %>